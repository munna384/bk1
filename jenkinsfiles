pipeline {
    agent any
    
    stages {
        stage('Create Website') {
            steps {
                echo "=== Creating Website ==="
                sh '''
                    sudo tee /var/www/html/index.html << 'EOF'
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to test Website</title>
    <style>
        body {
            font-family: Display sans, HeadlinerNo.45;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        header {
            background-color: #333;
            color: red;
            text-align: center;
            padding: 1rem;
        }
        nav {
            background-color: #444;
            padding: 1rem;
            text-align: center;
        }
        nav a {
            color: white;
            text-decoration: none;
            padding: 0.5rem 1rem;
        }
        .container {
            max-width: 1200px;
            margin: auto;
            padding: 2rem;
        }
        .content {
            background-color: white;
            padding: 2rem;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome to My Website</h1>
    </header>
    <nav>
        <a href="#home">Home</a>
        <a href="#about">About</a>
        <a href="#services">Learn</a>
        <a href="#contact">Contact</a>
    </nav>
    <div class="container">
        <div class="content">
            <h2>About Us</h2>
            <p>Welcome to our website! We specialize in providing high-quality services.</p>
            <h2>Our Services</h2>
            <ul>
                <li>Web Development</li>
                <li>Cloud Solutions</li>
                <li>DevOps Services</li>
                <li>Consulting</li>
            </ul>
            <h2>Contact Us</h2>
            <p>Email: info@example.com</p>
            <p>Phone: (555) 123-4567</p>
            <p>Deployment Time: $(date)</p>
        </div>
    </div>
</body>
</html>
EOF
                '''
            }
        }
        
        stage('Set Permissions') {
            steps {
                echo "=== Setting Permissions ==="
                sh '''
                    sudo chown -R apache:apache /var/www/html
                    sudo chmod -R 755 /var/www/html
                '''
            }
        }
        
        stage('Verify Deployment') {
            steps {
                echo "=== Verifying Website ==="
                sh '''
                    echo "Checking Apache Status:"
                    systemctl status httpd | grep Active
                    
                    echo "\nTesting Website Access:"
                    curl -I http://localhost
                '''
            }
        }
    }
    
    post {
        success {
            echo 'Website deployed successfully'
        }
        failure {
            echo 'Website deployment failed'
        }
    }
}
