pipeline {
    agent any
    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/munna384/bk1.git'
            }
        }
    stage('Approval Required') {
           steps {
               timeout(time: 5, unit: 'MINUTES') {
                   input message: 'Proceed with deployment?', ok: 'Deploy'
               }
           }
       }
        stage('Deploy HTML') {
            steps {
                sh 'sudo cp index.html /var/www/html/'
            }
        }
        stage('Set Permissions') {
            steps {
                echo "=== Setting Permissions ==="
                sh '''
                    sudo chown -R apache:apache /var/www/html
                    sudo chmod -R 755 /var/www/html
                '''
            }
        }
        stage('Verify Deployment') {
            steps {
                echo "=== Verifying Website ==="
                sh '''
                    echo "Checking Apache Status:"
                    systemctl status httpd | grep Active
                    echo "\nTesting Website Access:"
                    curl -I http://localhost
                '''
            }
        }
    }
    
    post {
        success {
            emailext (
                subject: "Pipeline SUCCESS: ${currentBuild.fullDisplayName}",
                body: """
                    Pipeline has been successfully deployed!
                    
                    Job: ${env.JOB_NAME}
                    Build Number: ${env.BUILD_NUMBER}
                    Build URL: ${env.BUILD_URL}
                """,
                to: 'raj.munna384@gmail.com'
            )
            echo 'Website deployed successfully'
        }
        failure {
            emailext (
                subject: "Pipeline FAILED: ${currentBuild.fullDisplayName}",
                body: """
                    Pipeline deployment failed!
                    
                    Job: ${env.JOB_NAME}
                    Build Number: ${env.BUILD_NUMBER}
                    Build URL: ${env.BUILD_URL}
                """,
                to: 'raj.munna384@gmail.com'
            )
            echo 'Website deployment failed'
        }
    }
}
